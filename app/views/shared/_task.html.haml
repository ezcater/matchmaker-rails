.card
  .card-section
    %h4= "#{task.type}-#{task.object_id}"
    %p
      = "Original #{task.brainshare_required}"
      = "Work Left #{task.work_left.round(2)}"
    %p
      Contexts
      = task.contexts
    %p
      = "ENY1B $#{task.eny1b}"
    %p
      = "TaskOpp #{task.task_opportunity}"
    %p
      Skills Required
      = task.skills_required

